const mongoose = require('mongoose');
const taskSchema = new mongoose.Schema({
    taskID: {
        type: String,
        required: true,
    },
    title: {
        type: String,
        required: true,
    },
    date: {
        type: String,
        required: true,
    },
    favorite: {
        type: Boolean,
        default: false
    },
	icon: {
        type: String,
        default: false
    tags: {
        type: String,
        required: true
    }
});

const taskModel = mongoose.model('Task', taskSchema);

const counterschema = new mongoose.Schema({
    name: {
        type: String,
        required: true,
    },
    count: {
        type: Number,
        required: true,
    }
});

const counterModel = mongoose.model('Counter', counterschema);

module.exports = {
    taskModel,
    counterModel
};

function setDark() 
{
	if (localStorage.getItem('dark') === "true")
		localStorage.setItem('dark', false);
	else
		localStorage.setItem('dark', true)
		
	location.reload();
}